<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout style="@style/wrap_layout">

        <!-- 上圆角-->
        <LinearLayout
            android:id="@+id/menuCloudBlogLayout"
            style="@style/top_layout">
            <TextView
                android:id="@+id/menuCloudBlog"
                style="@style/usertext"
                android:text="  云博客" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

        <View style="@style/bg_line"/>

        <!-- 上圆角-->
        <LinearLayout
            android:id="@+id/menuPersonalCenterLayout"
            style="@style/mid_layout">
            <TextView
                android:id="@+id/menuPersonalCenter"
                style="@style/usertext"
                android:text="  个人中心" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

        <View style="@style/bg_line"/>

        <!-- 无圆角-->
        <LinearLayout
            android:id="@+id/menuBoughtCourseLayout"
            style="@style/mid_layout">
            <TextView
                android:id="@+id/menuBoughtCourse"
                style="@style/usertext"
                android:text="  已购课程" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

        <View style="@style/bg_line"/>

        <!-- 下圆角-->
        <LinearLayout
            android:id="@+id/menuAdviseLayout"
            style="@style/bottom_layout">
            <TextView
                android:id="@+id/menuAdvise"
                style="@style/usertext"
                android:text="  我要吐槽" />
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>


    </LinearLayout>


    <!-- 全圆角-->
    <LinearLayout style="@style/wrap_layout"
        android:layout_marginBottom="40dp">     <!--底部预留一点空间-->

        <LinearLayout
            android:id="@+id/menuAboutLayout"
            style="@style/single_layout">
            <TextView
                android:id="@+id/menuAbout"
                style="@style/usertext"
                android:text="  关于链知"/>
            <ImageView style="@style/img_arrow"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>