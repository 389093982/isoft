<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/loadingDataLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/pb_progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.core.widget.ContentLoadingProgressBar>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/noMoreDataLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center">
        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/default_tiny_padding"
            android:layout_weight="1"
            android:background="@color/light_gray" />

        <TextView
            android:id="@+id/noMoreData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingEnd="@dimen/default_tiny_padding"
            android:paddingStart="@dimen/default_tiny_padding"
            android:text="我是有底线的"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/default_tiny_padding"
            android:layout_weight="1"
            android:background="@color/light_gray" />
    </LinearLayout>

</LinearLayout>

