<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_user_avatar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/default_tiny_padding">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/headerIcon"
            android:src="@drawable/cutecat"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/item_user_lever"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/item_user_avatar_layout"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/nickNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_alpha_60"
            android:text="链知小白"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/item_user_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/nickNameText" />

        <TextView
            android:id="@+id/item_comment_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nickNameText"
            android:layout_marginTop="3dp"
            android:textColor="@color/black_alpha_30"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nickNameText"
            android:layout_marginStart="@dimen/default_tiny_padding"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/item_comment_floor"
            android:textColor="@color/black_alpha_30"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/item_comment_spot"
            android:drawablePadding="@dimen/default_tiny_padding"
            android:drawableStart="@drawable/ic_feedback_grey"
            android:textColor="@color/black_alpha_45"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/item_comment_spot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/item_comment_more"
            android:drawablePadding="@dimen/default_tiny_padding"
            android:drawableStart="@drawable/ic_feedback_support_grey"
            android:textColor="@color/black_alpha_45"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/item_comment_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/default_tiny_padding"
            android:paddingTop="1dp"
            android:src="@drawable/ic_more_grey" />


        <TextView
            android:id="@+id/commentContentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_comment_floor"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingTop="@dimen/default_tiny_padding"
            android:textColor="@color/font_normal"
            android:text="测试评论11111111111"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line_bg" />
</RelativeLayout>


