<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="false"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

                <ImageView
                    android:id="@+id/goodsImg"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:text="商品图片">
                </ImageView>

                <TextView
                    android:id="@+id/goodsDesc"
                    android:layout_toRightOf="@+id/goodsImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="商品描述">
                </TextView>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/colorPrimary"
                    android:text="商品价格"/>

                <TextView
                    android:id="@+id/youhuiTip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/price"
                    android:layout_alignRight="@+id/price"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp"
                    android:text="优惠提示"/>


                <TextView
                    android:id="@+id/toPayBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/goodsImg"
                    android:layout_alignLeft="@+id/goodsDesc"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/common_tag_border"
                    android:paddingBottom="5dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:text="前去支付"
                    android:textSize="12dp">
                </TextView>

                <TextView
                    android:id="@+id/deleteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/toPayBtn"
                    android:layout_alignBottom="@+id/toPayBtn"
                    android:background="@drawable/common_tag_border"
                    android:paddingBottom="5dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="删除"
                    android:textSize="12dp">
                </TextView>

                <TextView
                    android:id="@+id/addTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/deleteBtn"
                    android:layout_alignBottom="@+id/deleteBtn"
                    android:layout_marginLeft="10dp"
                    android:text="添加时间">
                </TextView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
