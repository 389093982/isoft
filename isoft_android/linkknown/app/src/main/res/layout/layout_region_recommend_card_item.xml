<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/courseImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/linkknown"/>

        <TextView
            android:id="@+id/isCharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:background="@drawable/common_tag_free"
            android:paddingBottom="5dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="免费"
            android:textColor="@color/white"
            android:textSize="10sp"/>

        <ImageView
            android:id="@+id/video_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/video_play" />

        <TextView
            android:id="@+id/courseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courseImage"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/font_normal"
            android:textSize="14sp"
            android:text="课程名称"/>

        <ImageView
            android:id="@+id/watchNumberText_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_below="@+id/courseName"
            android:layout_alignLeft="@+id/courseName"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_play_circle_outline_black_24dp" />

        <TextView
            android:id="@+id/watchNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/watchNumberText_icon"
            android:layout_alignBottom="@+id/watchNumberText_icon"
            android:layout_marginLeft="3dp"
            android:textColor="@color/black_alpha_45"
            android:textSize="12sp"
            android:text="观看次数"/>


        <ImageView
            android:id="@+id/courseNumberText_icon"
            android:layout_toRightOf="@+id/watchNumberText"
            android:layout_alignBottom="@+id/watchNumberText"
            android:layout_marginLeft="20dp"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_subtitles_black_24dp" />

        <TextView
            android:id="@+id/courseNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/courseNumberText_icon"
            android:layout_alignBottom="@+id/courseNumberText_icon"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:textColor="@color/black_alpha_45"
            android:textSize="12sp"
            android:text="28集"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/watchNumberText_icon"
            android:layout_alignLeft="@+id/watchNumberText_icon"
            android:layout_marginTop="10dp"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:text="￥888.00"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>




