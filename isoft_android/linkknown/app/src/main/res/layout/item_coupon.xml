<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/couponLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white">

        <TextView
            android:id="@+id/youhuiTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1折/￥88"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/jianmianTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/youhuiTextView"
            android:layout_alignBottom="@+id/youhuiTextView"
            android:layout_marginStart="12dp"
            android:text="满 99 元减 50 元"
            style="@style/couponTextStyle"/>


        <TextView
            android:id="@+id/couponType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/youhuiTextView"
            android:layout_alignLeft="@+id/youhuiTextView"
            android:text="券类型"
            style="@style/couponTextStyle"/>

        <TextView
            android:id="@+id/useIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/couponType"
            android:layout_alignBottom="@+id/couponType"
            android:layout_marginLeft="5dp"
            android:text="适用于"
            style="@style/couponTextStyle"/>

        <TextView
            android:id="@+id/targetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/useIn"
            android:layout_alignBottom="@+id/couponType"
            android:text="使用对象名称"
            style="@style/couponTextStyle"/>

        <TextView
            android:id="@+id/endTimeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/couponType"
            android:layout_alignLeft="@+id/youhuiTextView"
            android:layout_marginTop="10dp"
            android:text="活动日期："
            style="@style/couponTextStyle"/>


        <ImageView
            android:id="@+id/submitBgView"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:src="@drawable/coupon"
            android:foreground="?attr/selectableItemBackground"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="28dp">
            <TextView
                android:id="@+id/submitBtnView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即使用"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:ems="1"/>
        </LinearLayout>
</RelativeLayout>