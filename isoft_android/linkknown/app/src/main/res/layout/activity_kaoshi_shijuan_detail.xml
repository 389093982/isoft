<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/timuIndexLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_below="@id/horizontalScrollView"
        android:layout_above="@id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/timuLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/timu_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="问题"/>
            <TextView
                android:id="@+id/timu_answer_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选项 a"/>
            <TextView
                android:id="@+id/timu_answer_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选项 b"/>
            <TextView
                android:id="@+id/timu_answer_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选项 c"/>
            <TextView
                android:id="@+id/timu_answer_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选项 d"/>
            <TextView
                android:id="@+id/timu_answer_e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选项 e"/>
            <TextView
                android:id="@+id/timu_answer_f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选项 f"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/horizontal_bar_bg"
        android:orientation="horizontal"
        android:paddingTop="1px"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/answerProgress"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="答题进度"
            android:gravity="center"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/prefixView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="上一题"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/nextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="下一题"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>