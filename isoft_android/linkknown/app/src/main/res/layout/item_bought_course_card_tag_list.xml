<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/bg_card"
    android:padding="10dp">

<!--    购买时候的图片-->
    <ImageView
        android:id="@+id/courseImg_boughtDate"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:src="@drawable/linkknown"/>

    <TextView
        android:id="@+id/courseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/courseImg_boughtDate"
        android:ellipsize="end"
        android:gravity="left"
        android:textSize="14sp"
        android:text="课程名称"/>

    <TextView
        android:id="@+id/courseDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/courseName"
        android:layout_alignLeft="@+id/courseName"
        android:layout_marginTop="5dp"
        android:textColor="@color/gray1"
        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="12sp"
        android:text="课程描述"/>

    <TextView
        android:id="@+id/paidAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/courseDesc"
        android:layout_alignLeft="@+id/courseDesc"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        android:text="支付金额"/>

    <TextView
        android:id="@+id/transTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/paidAmount"
        android:layout_marginRight="20dp"
        android:textSize="14dp"
        android:text="交易日期"/>

</RelativeLayout>
