<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <Button
            android:id="@+id/btnToLogin"
            android:layout_width="100dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            android:text="前去登录"/>

        <Button
            android:id="@+id/btnToCourseList"
            android:layout_width="100dp"
            android:layout_height="64dp"
            android:layout_toLeftOf="@id/btnToLogin"
            android:layout_centerVertical="true"
            android:text="查看课程"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".MainActivity"
        tools:showIn="@layout/app_bar_main">

        <com.linkknown.ilearning.viewpage.MainActivityViewPager
            android:id="@+id/mViewPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="55dp"/>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/imageButton0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/home_button_selector"
                android:gravity="center"
                android:text="首页"
                android:textColor="@drawable/bottom_button_text_selector"
                android:textSize="12sp"/>

            <RadioButton

                android:id="@+id/imageButton1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/category_button_selector"
                android:gravity="center"
                android:text="分类"
                android:textColor="@drawable/bottom_button_text_selector"
                android:textSize="12sp"/>

            <RadioButton

                android:id="@+id/imageButton2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/mine_button_selector"
                android:gravity="bottom|center"
                android:text="我的"
                android:textColor="@drawable/bottom_button_text_selector"
                android:textSize="12sp"/>
        </RadioGroup>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>